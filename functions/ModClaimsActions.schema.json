{
  "definitions": {},
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "http://tbte.ca/ModClaimsActions.schema.json",
  "type": "object",
  "title": "ModClaimsActions",
  "additionalProperties": false,
  "required": [
    "action",
    "users"
  ],
  "properties": {
    "action": {
      "$id": "#/properties/action",
      "type": "string",
      "enum": ["add", "remove"],
      "title": "Action to perform",
      "examples": [ "add", "remove" ]
    },
    "users": {
      "$id": "#/properties/claims",
      "type": "object",
      "patternProperties": {
        ".": { 
          "type": "array",
          "items": {
            "type": "string",
            "enum": ["admin", "audit", "standard"]
          }
        }
      },
      "minProperties": 1,
      "title": "Claims to perform action upon"
    }
  }
}