{
  "definitions": {},
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "http://tbte.ca/ModClaimsActions.schema.json",
  "type": "object",
  "title": "ModClaimsActions",
  "additionalProperties": false,
  "required": [
    "action",
    "users",
    "claims"
  ],
  "properties": {
    "action": {
      "$id": "#/properties/action",
      "type": "string",
      "enum": ["add", "remove"],
      "title": "Action to perform",
      "examples": [ "add", "remove" ]
    },
    "users": {
      "$id": "#/properties/users",
      "title": "uids to perform action upon",
      "type": "array",
      "minItems": 1,
      "uniqueItems": true,
      "items": {
        "type": "string",
        "minLength": 8
      }
    },
    "claims": {
      "$id": "#/properties/claims",
      "title": "claims to add or remove to uids",
      "type": "array",
      "minItems": 1,
      "uniqueItems": true,
      "items": {
        "enum": ["admin", "audit", "computers", "logins", "profiles", "projects", "rawlogins", "time", "users" ]
      }
    }  
  }
}
