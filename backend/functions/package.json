{
  "name": "functions",
  "engines": {
    "node": "12"
  },
  "description": "Cloud Functions for Firebase",
  "scripts": {
    "lint": "eslint --ext .ts \"src/\"",
    "build": "tsc",
    "serve": "npm run build && firebase emulators:start --only functions",
    "shell": "npm run build && firebase functions:shell",
    "start": "npm run shell",
    "deploy": "firebase deploy --only functions",
    "logs": "firebase functions:log",
    "test_coverage": "firebase emulators:exec --only firestore 'nyc mocha'",
    "test": "firebase emulators:exec --only firestore mocha",
    "test_emu": "mocha"
  },
  "mocha": {
    "require": [
      "ts-node/register",
      "source-map-support/register"
    ],
    "spec": [
      "test/**/*.ts"
    ],
    "exit": true
  },
  "nyc": {
    "extension": [
      ".ts",
      ".tsx"
    ],
    "exclude": [
      "**/*.d.ts"
    ],
    "reporter": [
      "lcov",
      "text"
    ],
    "all": true  
  },
  "main": "lib/index.js",
  "dependencies": {
    "@google-cloud/firestore": "4.9.8",
    "@types/archiver": "^5.1.0",
    "@types/uuid": "^8.3.0",
    "ajv": "^6.12.6",
    "algoliasearch": "^4.8.6",
    "archiver": "^5.3.0",
    "axios": "^0.21.1",
    "date-fns": "^2.16.1",
    "date-fns-tz": "^1.0.12",
    "firebase-admin": "^9.4.2",
    "firebase-functions": "^3.13.1",
    "jsonwebtoken": "^8.5.1",
    "jwk-to-pem": "^2.0.4",
    "jwt-decode": "^3.1.2",
    "lodash": "^4.17.20",
    "uuid": "^8.3.2"
  },
  "devDependencies": {
    "@firebase/rules-unit-testing": "^1.1.11",
    "@firebase/testing": "^0.20.11",
    "@types/chai": "^4.2.16",
    "@types/chai-as-promised": "^7.1.3",
    "@types/mocha": "^8.2.0",
    "@types/wtfnode": "^0.7.0",
    "@typescript-eslint/eslint-plugin": "^4.14.0",
    "@typescript-eslint/parser": "^4.14.0",
    "chai": "^4.2.0",
    "chai-as-promised": "^7.1.1",
    "decache": "^4.6.0",
    "eslint": "^7.18.0",
    "eslint-config-prettier": "^6.15.0",
    "eslint-plugin-import": "^2.22.0",
    "eslint-plugin-prettier": "^3.3.1",
    "eslint-plugin-promise": "^4.2.1",
    "firebase-functions-test": "^0.2.3",
    "mocha": "^8.2.1",
    "nyc": "^15.1.0",
    "prettier": "^2.2.1",
    "sinon": "^9.2.3",
    "source-map-support": "^0.5.19",
    "ts-node": "^9.1.1",
    "typescript": "^4.1.3",
    "wtfnode": "^0.8.4"
  },
  "private": true
}
