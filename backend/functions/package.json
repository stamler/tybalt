{
  "name": "functions",
  "engines": {
    "node": "18"
  },
  "description": "Cloud Functions for Firebase",
  "scripts": {
    "prebuild": "cp ../../config.ts src/config.ts",
    "clean": "rimraf lib/",
    "copyfiles": "copyfiles -u 1 src/**/*.sql lib",
    "postbuild": "npm run copyfiles",
    "lint": "eslint --ext .ts \"src/\"",
    "build": "npm run clean && tsc",
    "serve": "npm run build && firebase emulators:start --only functions",
    "shell": "npm run build && firebase functions:shell",
    "start": "npm run shell",
    "deploy": "firebase deploy --only functions",
    "logs": "firebase functions:log",
    "test": "firebase emulators:exec --only firestore 'nyc mocha'",
    "test_no_coverage": "firebase emulators:exec --only firestore mocha",
    "test_no_emulator": "mocha"
  },
  "mocha": {
    "require": [
      "ts-node/register",
      "source-map-support/register"
    ],
    "spec": [
      "test/**/*.ts"
    ],
    "reporter": "spec",
    "exit": true
  },
  "nyc": {
    "extension": [
      ".ts",
      ".tsx"
    ],
    "exclude": [
      "**/*.d.ts"
    ],
    "reporter": [
      "lcov",
      "text"
    ],
    "all": true
  },
  "main": "lib/index.js",
  "dependencies": {
    "@aws-sdk/client-s3": "^3.109.0",
    "@google-cloud/firestore": "^6.8.0",
    "@types/archiver": "^6.0.0",
    "@types/uuid": "^9.0.6",
    "ajv": "^6.12.6",
    "algoliasearch": "^4.8.6",
    "archiver": "^6.0.1",
    "axios": "^0.24.0",
    "date-fns": "^2.16.1",
    "date-fns-tz": "^2.0.0",
    "firebase-admin": "^11.11.0",
    "firebase-functions": "^3.22",
    "jsonwebtoken": "^9.0.2",
    "jwk-to-pem": "^2.0.4",
    "jwt-decode": "^3.1.2",
    "lodash": "^4.17.20",
    "mysql2": "^2.3.3",
    "ssh2": "^1.5.0",
    "uuid": "^9.0.0"
  },
  "devDependencies": {
    "@firebase/rules-unit-testing": "^3.0.1",
    "@types/chai": "^4.2.16",
    "@types/chai-as-promised": "^7.1.3",
    "@types/mocha": "^10.0.3",
    "@types/sinon": "^10.0.6",
    "@types/ssh2": "^0.5.51",
    "@types/wtfnode": "^0.7.0",
    "@typescript-eslint/eslint-plugin": "^6.9.1",
    "@typescript-eslint/parser": "^6.9.1",
    "chai": "^4.2.0",
    "chai-as-promised": "^7.1.1",
    "copyfiles": "^2.4.1",
    "decache": "^4.6.0",
    "eslint": "^8.52.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-import": "^2.22.0",
    "eslint-plugin-prettier": "^5.0.1",
    "eslint-plugin-promise": "^6.1.1",
    "firebase-functions-test": "^2.4.0",
    "mocha": "^10.2.0",
    "nyc": "^15.1.0",
    "prettier": "^3.0.3",
    "rimraf": "^5.0.5",
    "sinon": "^17.0.0",
    "source-map-support": "^0.5.19",
    "ts-node": "^10.4.0",
    "typescript": "^4.2.4",
    "wtfnode": "^0.9.1"
  },
  "private": true
}
